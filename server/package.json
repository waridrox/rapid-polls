    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "mongoose": "^6.3.4",
    "redis": "^4.1.0",
    "socket.io": "^4.5.1"
  },
  "devDependencies": {
    "artillery": "^2.0.0-16",
    "nodemon": "^2.0.16"
  }
}
